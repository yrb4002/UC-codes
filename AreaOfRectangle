import java.util.Scanner;
public class AreaOfRectangle {
    public static void main(String[] args) {
        Scanner val = new Scanner(System.in);
        
        System.out.print("Enter the length of the garden(meters): ");
        int length = val.nextInt();
        
        System.out.print("Enter the width of the garden(meters): ");
        int width = val.nextInt();
        
        int area = length * width;
        int perimeter = 2 * (length + width);
        
        System.out.println("The length of the garden is " + length + " meters.");
        System.out.println("The width of the garden is "+ width + " meters.");
        System.out.println("The area of the garden is " + area + " meters.");
        System.out.println("The perimeter of the garden is "+ perimeter + " meters.");
    }
}
